<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean name="emailService"
          class="com.alporan.springconfigurations.services.EmailService" />

    <bean name="smsService"
          class="com.alporan.springconfigurations.services.SmsService" />

    <bean name="messageProcessor"
          class="com.alporan.springconfigurations.services.MessageProcessorImpl"
          init-method="initBean"
          destroy-method="destroyBean">
        <property name="message" value="${input.message}" />
        <constructor-arg name="messageService" ref="emailService"> </constructor-arg>
    </bean>

</beans>